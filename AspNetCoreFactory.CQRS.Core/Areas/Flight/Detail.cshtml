@model AspNetCoreFactory.CQRS.Core.Areas.Flight.Detail.Result
@{
    ViewBag.Title = "Flight " + Model.FlightNumber;
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/flights">Flights</a></li>
    <li class="breadcrumb-item active">Detail</li>
</ol>

<h4>Flight @Model.FlightNumber</h4>

<div class="row p-20">
    <div class="col-12 col-sm-6">
        <div class="form-group form-group-sm row">
            <label for="FlightNumber" class="col-sm-4 col-form-label">Flight Number</label>
            <div class="col-sm-8 col-form-text">@Model.FlightNumber</div>
        </div>
        <div class="form-group form-group-sm row">
            <label for="Plane" class="col-sm-4 col-form-label">Plane</label>
            <div class="col-sm-8 col-form-text">@Model.Plane</div>
        </div>
        <div class="form-group form-group-sm row">
            <label for="From" class="col-sm-4 col-form-label">From</label>
            <div class="col-sm-8 col-form-text">@Model.From</div>
        </div>
        <div class="form-group form-group-sm row">
            <label for="To" class="col-sm-4 col-form-label">To</label>
            <div class="col-sm-8 col-form-text">@Model.To</div>
        </div>
        <div class="form-group form-group-sm row">
            <label for="Departure" class="col-sm-4 col-form-label">Departure</label>
            <div class="col-sm-8 col-form-text">@Model.Departure</div>
        </div>
        <div class="form-group form-group-sm row">
            <label for="Arrival" class="col-sm-4 col-form-label">Arrival</label>
            <div class="col-sm-8 col-form-text">@Model.Arrival</div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">&nbsp;</label>
            <div class="col-sm-8 pt-15">
                <a class="btn btn-light btn-sm" href="javascript:window.history.back();">Cancel</a>
            </div>
        </div>
    </div>
</div>
