@model AspNetCoreFactory.CQRS.Core.Areas.Flight.Edit.Command
@{
    var title = Model.Id == 0 ? "New Flight" : "Edit Flight";
    ViewBag.Title = title;
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/flights">Flights</a></li>
    <li class="breadcrumb-item active">@(Model.Id == 0 ? "New" : "Edit")</li>
</ol>

<h4>@title</h4>

<div class="row p-20">
    <div class="col-12 col-sm-6">
        <form asp-antiforgery="true" method="post">

            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <label for="FlightNumber" class="col-sm-4 col-form-label">Flight Number</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="FlightNumber" class="form-control" />
                    <span asp-validation-for="FlightNumber"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="PlaneId" class="col-sm-4 col-form-label">Plane</label>
                <div class="col-sm-8">
                    <select asp-for="PlaneId" asp-items="Lookup.PlaneItems" class="form-control"></select>
                    <span asp-validation-for="PlaneId"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="From" class="col-sm-4 col-form-label">From</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="From" class="form-control" />
                    <span asp-validation-for="From"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="To" class="col-sm-4 col-form-label">To</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="To" class="form-control" />
                    <span asp-validation-for="To"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Departure" class="col-sm-4 col-form-label">Departure</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="DepartureDate" class="form-control js-date" placeholder="mm/dd/yyyy" />
                    <span asp-validation-for="DepartureDate"></span>
                </div>
                <div class="col-sm-4">
                    <input type="text" asp-for="DepartureTime" class="form-control js-time"  placeholder="hh:mm" />
                    <span asp-validation-for="DepartureTime"></span>
                </div>
            </div>


            <div class="form-group row">
                <label for="Arrival" class="col-sm-4 col-form-label">Arrival</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="ArrivalDate" class="form-control js-date"  placeholder="mm/dd/yyyy"/>
                    <span asp-validation-for="ArrivalDate"></span>
                </div>
                <div class="col-sm-4">
                    <input type="text" asp-for="ArrivalTime" class="form-control js-time"  placeholder="hh:mm"/>
                    <span asp-validation-for="ArrivalTime"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">&nbsp;</label>
                <div class="col-sm-8 pt-15">
                    <button id="save" class="btn btn-light btn-sm" type="submit">&nbsp; Save &nbsp;</button>&nbsp;&nbsp;
                    <a class="btn btn-light btn-sm" href="javascript:history.back();">Cancel</a>
                </div>
            </div>
        </form>

    </div>
</div>


@section Scripts
    {
    <script>
        $(function () {
            $('.js-date').datepicker({
                format: 'mm/dd/yyyy',
                autoclose: true,
                closeOnDateSelect: true
            });

            $('js-time').inputmask("hh:mm", {
                placeholder: "HH:MM",
                insertMode: false,
                showMaskOnHover: false,
                hourFormat: 24
            });


        });
    </script>
}

